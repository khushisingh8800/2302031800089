    <script>
        // Advanced JavaScript for CampusCanteen Management System

        // Data Models
        class InventoryItem {
            constructor(id, name, category, type, quantity, expiryDate, canteen, supplier) {
                this.id = id;
                this.name = name;
                this.category = category;
                this.type = type;
                this.quantity = quantity;
                this.expiryDate = expiryDate;
                this.canteen = canteen;
                this.supplier = supplier;
                this.status = this.calculateStatus();
            }
            
            calculateStatus() {
                const today = new Date();
                const expiry = new Date(this.expiryDate);
                const diffTime = expiry - today;
                const diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24));
                
                if (diffDays < 0) return 'expired';
                if (diffDays <= 7) return 'warning';
                return 'good';
            }
            
            toTableRow() {
                const statusBadge = this.status === 'good' ? 'status-good' : 
                                  this.status === 'warning' ? 'status-warning' : 'status-expired';
                const statusText = this.status === 'good' ? 'Good' : 
                                 this.status === 'warning' ? 'Expiring Soon' : 'Expired';
                const typeBadge = this.type === 'veg' ? 'status-veg' : 'status-nonveg';
                const typeText = this.type === 'veg' ? 'Veg' : 'Non-Veg';
                
                return `
                    <tr data-id="${this.id}">
                        <td><input type="checkbox" class="row-checkbox" data-id="${this.id}"></td>
                        <td>${this.id}</td>
                        <td>${this.name}</td>
                        <td>${this.category}</td>
                        <td><span class="status-badge ${typeBadge}">${typeText}</span></td>
                        <td>${this.quantity}</td>
                        <td>${this.expiryDate}</td>
                        <td><span class="status-badge ${statusBadge}">${statusText}</span></td>
                        <td>${this.canteen}</td>
                        <td>
                            <button class="btn btn-outline btn-sm edit-btn" data-id="${this.id}">Edit</button>
                            <button class="btn btn-danger btn-sm remove-btn" data-id="${this.id}">Remove</button>
                        </td>
                    </tr>
                `;
            }
        }

        class Canteen {
            constructor(name, location, vegItems, nonVegItems, expiringSoon, lastAudit) {
                this.name = name;
                this.location = location;
                this.vegItems = vegItems;
                this.nonVegItems = nonVegItems;
                this.expiringSoon = expiringSoon;
                this.lastAudit = lastAudit;
                this.stockStatus = this.calculateStockStatus();
            }
            
            calculateStockStatus() {
                const totalItems = this.vegItems + this.nonVegItems;
                if (totalItems < 15) return 'warning';
                return 'good';
            }
            
            toTableRow() {
                const statusBadge = this.stockStatus === 'good' ? 'status-good' : 'status-warning';
                const statusText = this.stockStatus === 'good' ? 'Well Stocked' : 'Low Stock';
                
                return `
                    <tr data-name="${this.name}">
                        <td>${this.name}</td>
                        <td>${this.location}</td>
                        <td>${this.vegItems}</td>
                        <td>${this.nonVegItems}</td>
                        <td>${this.expiringSoon}</td>
                        <td><span class="status-badge ${statusBadge}">${statusText}</span></td>
                        <td>${this.lastAudit}</td>
                        <td>
                            <button class="btn btn-outline btn-sm view-details-btn" data-name="${this.name}">View Details</button>
                        </td>
                    </tr>
                `;
            }
        }

        class Vendor {
            constructor(id, name, specialization, contact, rating, deliveryTime, discount) {
                this.id = id;
                this.name = name;
                this.specialization = specialization;
                this.contact = contact;
                this.rating = rating;
                this.deliveryTime = deliveryTime;
                this.discount = discount;
                this.status = 'active';
            }
            
            toTableRow() {
                return `
                    <tr data-id="${this.id}">
                        <td>${this.id}</td>
                        <td>${this.name}</td>
                        <td>${this.specialization}</td>
                        <td>${this.contact}</td>
                        <td>${this.rating}/5</td>
                        <td>${this.deliveryTime}</td>
                        <td>${this.discount}%</td>
                        <td><span class="status-badge status-good">Active</span></td>
                        <td>
                            <button class="btn btn-outline btn-sm order-btn" data-id="${this.id}">Order</button>
                        </td>
                    </tr>
                `;
            }
        }

        // Application State
        const state = {
            inventory: [],
            canteens: [],
            vendors: [],
            nextItemId: 6,
            nextVendorId: 5,
            editingItem: null
        };

        // Utility Functions
        const utils = {
            showToast(message, type = 'success') {
                const toast = document.getElementById('toast');
                toast.textContent = message;
                toast.className = `toast ${type}`;
                toast.classList.add('show');
                
                setTimeout(() => {
                    toast.classList.remove('show');
                }, 3000);
            },
            
            generateId(prefix) {
                return `${prefix}-${Date.now()}`;
            },
            
            formatDate(date) {
                return new Date(date).toISOString().split('T')[0];
            },
            
            debounce(func, wait) {
                let timeout;
                return function executedFunction(...args) {
                    const later = () => {
                        clearTimeout(timeout);
                        func(...args);
                    };
                    clearTimeout(timeout);
                    timeout = setTimeout(later, wait);
                };
            },
            
            showConfirmation(message, confirmCallback, cancelCallback = null) {
                // Create confirmation modal
                const modal = document.createElement('div');
                modal.className = 'modal';
                modal.style.display = 'flex';
                
                modal.innerHTML = `
                    <div class="modal-content" style="max-width: 500px;">
                        <div class="modal-header">
                            <h2>Confirm Action</h2>
                            <button class="close-btn" id="closeConfirmModal">&times;</button>
                        </div>
                        <div class="modal-body">
                            <p>${message}</p>
                            <div style="display: flex; gap: 10px; margin-top: 20px;">
                                <button class="btn btn-primary" id="confirmBtn">Confirm</button>
                                <button class="btn btn-outline" id="cancelBtn">Cancel</button>
                            </div>
                        </div>
                    </div>
                `;
                
                document.body.appendChild(modal);
                
                // Add event listeners
                document.getElementById('closeConfirmModal').addEventListener('click', () => {
                    document.body.removeChild(modal);
                    if (cancelCallback) cancelCallback();
                });
                
                document.getElementById('cancelBtn').addEventListener('click', () => {
                    document.body.removeChild(modal);
                    if (cancelCallback) cancelCallback();
                });
                
                document.getElementById('confirmBtn').addEventListener('click', () => {
                    document.body.removeChild(modal);
                    confirmCallback();
                });
                
                // Close modal when clicking outside
                modal.addEventListener('click', (e) => {
                    if (e.target === modal) {
                        document.body.removeChild(modal);
                        if (cancelCallback) cancelCallback();
                    }
                });
            }
        };

        // DOM Elements
        const elements = {
            // Modals
            addItemModal: document.getElementById('addItemModal'),
            closeItemModal: document.getElementById('closeItemModal'),
            itemForm: document.getElementById('itemForm'),
            modalTitle: document.getElementById('modalTitle'),
            submitBtnText: document.getElementById('submitBtnText'),
            editItemId: document.getElementById('editItemId'),
            
            // Buttons
            addItemBtn: document.getElementById('addItemBtn'),
            addInventoryBtn: document.getElementById('addInventoryBtn'),
            exportExcelBtn: document.getElementById('exportExcelBtn'),
            markNonVegBtn: document.getElementById('markNonVegBtn'),
            removeNonVegBtn: document.getElementById('removeNonVegBtn'),
            restockAllBtn: document.getElementById('restockAllBtn'),
            generateOrderBtn: document.getElementById('generateOrderBtn'),
            scheduleAuditBtn: document.getElementById('scheduleAuditBtn'),
            exportReportBtn: document.getElementById('exportReportBtn'),
            addVendorBtn: document.getElementById('addVendorBtn'),
            placeBulkOrderBtn: document.getElementById('placeBulkOrderBtn'),
            
            // Tables
            inventoryTableBody: document.getElementById('inventoryTableBody'),
            canteenTableBody: document.getElementById('canteenTableBody'),
            vendorTableBody: document.getElementById('vendorTableBody'),
            auditTableBody: document.getElementById('auditTableBody'),
            
            // Form inputs
            itemName: document.getElementById('itemName'),
            itemCategory: document.getElementById('itemCategory'),
            itemType: document.getElementById('itemType'),
            quantity: document.getElementById('quantity'),
            expiryDate: document.getElementById('expiryDate'),
            canteenLocation: document.getElementById('canteenLocation'),
            supplier: document.getElementById('supplier'),
            
            // Search
            searchInput: document.getElementById('searchInput'),
            selectAll: document.getElementById('selectAll')
        };

        // Application Core Functions
        const app = {
            init() {
                this.loadSampleData();
                this.setupEventListeners();
                this.renderAllTables();
                utils.showToast('CampusCanteen Manager initialized successfully!');
            },
            
            loadSampleData() {
                // Sample inventory items
                state.inventory = [
                    new InventoryItem('CTN-001', 'Chicken Sandwich', 'Food', 'nonveg', 15, '2023-11-20', 'Main Canteen', 'green-farms'),
                    new InventoryItem('CTN-002', 'Veg Pulao', 'Food', 'veg', 28, '2023-11-25', 'Engineering Block', 'grains-more'),
                    new InventoryItem('CTN-003', 'Egg Roll', 'Food', 'nonveg', 12, '2023-11-18', 'Science Block', 'daily-dairy'),
                    new InventoryItem('CTN-004', 'Paneer Tikka', 'Food', 'veg', 20, '2023-12-05', 'Main Canteen', 'daily-dairy'),
                    new InventoryItem('CTN-005', 'Chicken Biryani', 'Food', 'nonveg', 18, '2023-11-22', 'Commerce Block', 'spice-kingdom')
                ];
                
                // Sample canteens
                state.canteens = [
                    new Canteen('Main Canteen', 'Central Campus', 24, 8, 5, '2023-11-10'),
                    new Canteen('Engineering Block', 'Block A', 18, 6, 3, '2023-11-12'),
                    new Canteen('Science Block', 'Block B', 15, 5, 7, '2023-11-08'),
                    new Canteen('Commerce Block', 'Block C', 20, 4, 2, '2023-11-14')
                ];
                
                // Sample vendors
                state.vendors = [
                    new Vendor('VDR-001', 'Green Farms Organics', 'Fresh Vegetables', '9876543210', 4.8, '2-3 days', 8),
                    new Vendor('VDR-002', 'Daily Dairy Co.', 'Dairy Products', '9876543211', 4.6, '1-2 days', 5),
                    new Vendor('VDR-003', 'Grains & More', 'Rice & Pulses', '9876543212', 4.7, '3-4 days', 7),
                    new Vendor('VDR-004', 'Spice Kingdom', 'Spices & Masalas', '9876543213', 4.5, '2-3 days', 6)
                ];
            },
            
            setupEventListeners() {
                // Tab functionality
                document.querySelectorAll('.tab').forEach(tab => {
                    tab.addEventListener('click', () => {
                        const tabId = tab.getAttribute('data-tab');
                        document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
                        document.querySelectorAll('.tab-content').forEach(c => c.classList.remove('active'));
                        tab.classList.add('active');
                        document.getElementById(`${tabId}-tab`).classList.add('active');
                    });
                });
                
                // Modal functionality
                elements.addItemBtn.addEventListener('click', () => this.openAddItemModal());
                elements.addInventoryBtn.addEventListener('click', () => this.openAddItemModal());
                elements.closeItemModal.addEventListener('click', () => this.closeModal());
                
                window.addEventListener('click', (e) => {
                    if (e.target === elements.addItemModal) {
                        this.closeModal();
                    }
                });
                
                // Form submission
                elements.itemForm.addEventListener('submit', (e) => this.handleItemSubmit(e));
                
                // Table actions
                elements.inventoryTableBody.addEventListener('click', (e) => {
                    if (e.target.classList.contains('edit-btn')) {
                        this.editItem(e.target.getAttribute('data-id'));
                    } else if (e.target.classList.contains('remove-btn')) {
                        this.removeItem(e.target.getAttribute('data-id'));
                    }
                });
                
                elements.vendorTableBody.addEventListener('click', (e) => {
                    if (e.target.classList.contains('order-btn')) {
                        this.placeOrder(e.target.getAttribute('data-id'));
                    }
                });
                
                // Bulk actions
                elements.markNonVegBtn.addEventListener('click', () => this.markNonVegForRemoval());
                elements.removeNonVegBtn.addEventListener('click', () => this.removeAllNonVeg());
                elements.restockAllBtn.addEventListener('click', () => this.restockAll());
                elements.generateOrderBtn.addEventListener('click', () => this.generateOrder());
                elements.addVendorBtn.addEventListener('click', () => this.addVendor());
                elements.placeBulkOrderBtn.addEventListener('click', () => this.placeBulkOrder());
                
                // Export functionality
                elements.exportExcelBtn.addEventListener('click', () => this.exportToExcel());
                elements.exportReportBtn.addEventListener('click', () => this.exportReport());
                
                // Search functionality
                elements.searchInput.addEventListener('input', utils.debounce(() => {
                    this.filterInventory(elements.searchInput.value);
                }, 300));
                
                // Select all functionality
                elements.selectAll.addEventListener('change', (e) => {
                    document.querySelectorAll('.row-checkbox').forEach(checkbox => {
                        checkbox.checked = e.target.checked;
                    });
                });
            },
            
            openAddItemModal(item = null) {
                elements.modalTitle.textContent = item ? 'Edit Inventory Item' : 'Add New Inventory Item';
                elements.submitBtnText.textContent = item ? 'Update Item' : 'Add Item to Inventory';
                
                if (item) {
                    elements.editItemId.value = item.id;
                    elements.itemName.value = item.name;
                    elements.itemCategory.value = item.category;
                    elements.itemType.value = item.type;
                    elements.quantity.value = item.quantity;
                    elements.expiryDate.value = item.expiryDate;
                    elements.canteenLocation.value = item.canteen;
                    elements.supplier.value = item.supplier;
                    state.editingItem = item;
                } else {
                    elements.itemForm.reset();
                    elements.editItemId.value = '';
                    state.editingItem = null;
                }
                
                elements.addItemModal.style.display = 'flex';
            },
            
            closeModal() {
                elements.addItemModal.style.display = 'none';
                elements.itemForm.reset();
                state.editingItem = null;
            },
            
            handleItemSubmit(e) {
                e.preventDefault();
                
                const itemData = {
                    id: elements.editItemId.value || `CTN-${state.nextItemId.toString().padStart(3, '0')}`,
                    name: elements.itemName.value,
                    category: elements.itemCategory.value,
                    type: elements.itemType.value,
                    quantity: parseInt(elements.quantity.value),
                    expiryDate: elements.expiryDate.value,
                    canteen: elements.canteenLocation.value,
                    supplier: elements.supplier.value
                };
                
                if (state.editingItem) {
                    // Update existing item
                    const index = state.inventory.findIndex(item => item.id === state.editingItem.id);
                    if (index !== -1) {
                        state.inventory[index] = new InventoryItem(
                            itemData.id, itemData.name, itemData.category, itemData.type,
                            itemData.quantity, itemData.expiryDate, itemData.canteen, itemData.supplier
                        );
                        utils.showToast('Item updated successfully!');
                    }
                } else {
                    // Add new item
                    state.inventory.push(new InventoryItem(
                        itemData.id, itemData.name, itemData.category, itemData.type,
                        itemData.quantity, itemData.expiryDate, itemData.canteen, itemData.supplier
                    ));
                    state.nextItemId++;
                    utils.showToast('Item added successfully!');
                }
                
                this.renderInventoryTable();
                this.closeModal();
            },
            
            editItem(itemId) {
                const item = state.inventory.find(item => item.id === itemId);
                if (item) {
                    this.openAddItemModal(item);
                }
            },
            
            removeItem(itemId) {
                utils.showConfirmation(
                    'Are you sure you want to remove this item?',
                    () => {
                        state.inventory = state.inventory.filter(item => item.id !== itemId);
                        this.renderInventoryTable();
                        utils.showToast('Item removed successfully!', 'warning');
                    }
                );
            },
            
            markNonVegForRemoval() {
                const nonVegItems = state.inventory.filter(item => item.type === 'nonveg');
                if (nonVegItems.length === 0) {
                    utils.showToast('No non-vegetarian items found!', 'warning');
                    return;
                }
                
                document.querySelectorAll('.row-checkbox').forEach(checkbox => {
                    const itemId = checkbox.getAttribute('data-id');
                    const item = state.inventory.find(item => item.id === itemId);
                    if (item && item.type === 'nonveg') {
                        checkbox.checked = true;
                    }
                });
                
                utils.showToast(`${nonVegItems.length} non-vegetarian items marked for removal`);
            },
            
            removeAllNonVeg() {
                const nonVegCount = state.inventory.filter(item => item.type === 'nonveg').length;
                if (nonVegCount === 0) {
                    utils.showToast('No non-vegetarian items to remove!', 'warning');
                    return;
                }
                
                utils.showConfirmation(
                    `Are you sure you want to remove all ${nonVegCount} non-vegetarian items?`,
                    () => {
                        state.inventory = state.inventory.filter(item => item.type !== 'nonveg');
                        this.renderInventoryTable();
                        utils.showToast(`All ${nonVegCount} non-vegetarian items removed successfully!`, 'warning');
                    }
                );
            },
            
            restockAll() {
                // Simulate restocking process
                const submitBtn = elements.restockAllBtn;
                const originalText = submitBtn.innerHTML;
                submitBtn.innerHTML = '<span class="spinner"></span> Restocking...';
                submitBtn.disabled = true;
                
                setTimeout(() => {
                    state.inventory.forEach(item => {
                        item.quantity += Math.floor(Math.random() * 10) + 5;
                    });
                    this.renderInventoryTable();
                    submitBtn.innerHTML = originalText;
                    submitBtn.disabled = false;
                    utils.showToast('All items restocked successfully!');
                }, 2000);
            },
            
            generateOrder() {
                const lowStockItems = state.inventory.filter(item => item.quantity < 10);
                if (lowStockItems.length === 0) {
                    utils.showToast('No low stock items found!', 'warning');
                    return;
                }
                
                const orderList = lowStockItems.map(item => 
                    `${item.name} (Current: ${item.quantity})`
                ).join('\n');
                
                // Show order details in a toast notification
                utils.showToast(`Generated order for ${lowStockItems.length} low stock items. Check console for details.`, 'info');
                
                // Log to console for detailed view
                console.log(`Generated order for low stock items:\n\n${orderList}`);
            },
            
            addVendor() {
                const newVendor = new Vendor(
                    `VDR-${state.nextVendorId.toString().padStart(3, '0')}`,
                    `New Vendor ${state.nextVendorId}`,
                    'General Supplies',
                    '987654321X',
                    (4 + Math.random()).toFixed(1),
                    '2-3 days',
                    Math.floor(Math.random() * 5) + 5
                );
                
                state.vendors.push(newVendor);
                state.nextVendorId++;
                this.renderVendorTable();
                utils.showToast('New vendor added successfully!');
            },
            
            placeOrder(vendorId) {
                const vendor = state.vendors.find(v => v.id === vendorId);
                if (vendor) {
                    utils.showToast(`Order placed with ${vendor.name}!`);
                }
            },
            
            placeBulkOrder() {
                if (state.vendors.length === 0) {
                    utils.showToast('No vendors available!', 'warning');
                    return;
                }
                
                utils.showToast(`Bulk order placed with ${state.vendors.length} vendors!`);
            },
            
            exportToExcel() {
                // Simulate Excel export
                const submitBtn = elements.exportExcelBtn;
                const originalText = submitBtn.innerHTML;
                submitBtn.innerHTML = '<span class="spinner"></span> Exporting...';
                submitBtn.disabled = true;
                
                setTimeout(() => {
                    submitBtn.innerHTML = originalText;
                    submitBtn.disabled = false;
                    utils.showToast('Data exported to Excel successfully!');
                }, 1500);
            },
            
            exportReport() {
                utils.showToast('Compliance report exported successfully!');
            },
            
            filterInventory(searchTerm) {
                const filteredItems = state.inventory.filter(item => 
                    item.name.toLowerCase().includes(searchTerm.toLowerCase()) ||
                    item.category.toLowerCase().includes(searchTerm.toLowerCase()) ||
                    item.canteen.toLowerCase().includes(searchTerm.toLowerCase())
                );
                
                this.renderInventoryTable(filteredItems);
            },
            
            renderAllTables() {
                this.renderInventoryTable();
                this.renderCanteenTable();
                this.renderVendorTable();
                this.renderAuditTable();
            },
            
            renderInventoryTable(items = state.inventory) {
                elements.inventoryTableBody.innerHTML = items.map(item => item.toTableRow()).join('');
            },
            
            renderCanteenTable() {
                elements.canteenTableBody.innerHTML = state.canteens.map(canteen => canteen.toTableRow()).join('');
            },
            
            renderVendorTable() {
                elements.vendorTableBody.innerHTML = state.vendors.map(vendor => vendor.toTableRow()).join('');
            },
            
            renderAuditTable() {
                // Sample audit data
                const auditData = [
                    ['2023-11-10', 'Main Canteen', '95%', '88%', '70%', '84%', 'Dr. Sharma', 'Passed'],
                    ['2023-11-12', 'Engineering Block', '92%', '85%', '65%', '81%', 'Dr. Sharma', 'Passed'],
                    ['2023-11-08', 'Science Block', '88%', '75%', '50%', '71%', 'Dr. Verma', 'Needs Improvement'],
                    ['2023-11-14', 'Commerce Block', '90%', '82%', '60%', '77%', 'Dr. Verma', 'Needs Improvement']
                ];
                
                elements.auditTableBody.innerHTML = auditData.map(row => `
                    <tr>
                        <td>${row[0]}</td>
                        <td>${row[1]}</td>
                        <td>${row[2]}</td>
                        <td>${row[3]}</td>
                        <td>${row[4]}</td>
                        <td>${row[5]}</td>
                        <td>${row[6]}</td>
                        <td><span class="status-badge ${row[7] === 'Passed' ? 'status-good' : 'status-warning'}">${row[7]}</span></td>
                    </tr>
                `).join('');
            }
        };

        // Initialize the application
        document.addEventListener('DOMContentLoaded', () => {
            app.init();
            
            // Simulate real-time updates
            setInterval(() => {
                // Update dashboard values randomly
                const expiringCount = document.querySelector('.dashboard-card.warning .value');
                const currentCount = parseInt(expiringCount.textContent);
                const change = Math.floor(Math.random() * 3) - 1;
                expiringCount.textContent = Math.max(0, currentCount + change);
                
                const complianceScore = document.querySelector('.dashboard-card.success .value');
                const currentScore = parseInt(complianceScore.textContent);
                const scoreChange = Math.floor(Math.random() * 3) - 1;
                complianceScore.textContent = Math.max(0, Math.min(100, currentScore + scoreChange)) + '%';
            }, 10000);
        });

        // Temperature monitoring simulation
        function simulateTemperatureMonitoring() {
            const temperatureCards = document.querySelectorAll('.temperature-card');
            
            temperatureCards.forEach(card => {
                const tempValue = card.querySelector('.temperature-value');
                const tempIcon = card.querySelector('.temperature-icon');
                const tempProgress = card.querySelector('.temperature-progress-bar');
                const tempAlert = card.querySelector('.temp-alert');
                
                // Get current temperature
                let currentTemp = parseInt(tempValue.textContent);
                
                // Simulate small temperature fluctuations
                const change = (Math.random() * 4 - 2).toFixed(1);
                currentTemp = parseFloat(currentTemp) + parseFloat(change);
                
                // Update display
                tempValue.textContent = currentTemp.toFixed(0) + 'C';
                
                // Update status based on temperature
                if (currentTemp >= 175 && currentTemp <= 190) {
                    // Optimal temperature
                    tempIcon.className = 'temperature-icon good';
                    tempIcon.innerHTML = '<i class="fas fa-thermometer-half"></i>';
                    tempProgress.className = 'temperature-progress-bar good';
                    tempAlert.className = 'temp-alert';
                    tempAlert.innerHTML = '<i class="fas fa-check-circle"></i> Temperature within optimal range';
                } else if (currentTemp < 175) {
                    // Too low
                    tempIcon.className = 'temperature-icon warning';
                    tempIcon.innerHTML = '<i class="fas fa-thermometer-half"></i>';
                    tempProgress.className = 'temperature-progress-bar warning';
                    tempAlert.className = 'temp-alert';
                    tempAlert.innerHTML = '<i class="fas fa-exclamation-triangle"></i> Temperature slightly low - Food may absorb more oil';
                } else {
                    // Too high
                    tempIcon.className = 'temperature-icon danger';
                    tempIcon.innerHTML = '<i class="fas fa-thermometer-half"></i>';
                    tempProgress.className = 'temperature-progress-bar danger';
                    tempAlert.className = 'temp-alert danger';
                    tempAlert.innerHTML = '<i class="fas fa-exclamation-circle"></i> Temperature too high - Risk of burning and harmful compounds';
                }
                
                // Update progress bar width based on temperature (150-220C range)
                const progressWidth = ((currentTemp - 150) / 70) * 100;
                tempProgress.style.width = Math.max(0, Math.min(100, progressWidth)) + '%';
            });
        }

        // Start temperature monitoring simulation
        setInterval(simulateTemperatureMonitoring, 5000);
    </script>
</body>
</html>
