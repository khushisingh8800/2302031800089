            showNotification(`Menu item "${itemName}" has been added successfully!`, 'success');
            document.getElementById('menu-item-form').style.display = 'none';
            this.reset();
        });

        // Food category filtering
        document.querySelectorAll('.food-category').forEach(category => {
            category.addEventListener('click', function() {
                document.querySelectorAll('.food-category').forEach(cat => {
                    cat.classList.remove('active');
                });
                this.classList.add('active');
                
                const categoryType = this.getAttribute('data-category');
                document.querySelectorAll('.restaurant').forEach(restaurant => {
                    const restaurantCategories = restaurant.getAttribute('data-category').split(',');
                    if (categoryType === 'all' || restaurantCategories.includes(categoryType)) {
                        restaurant.style.display = 'block';
                    } else {
                        restaurant.style.display = 'none';
                    }
                });
            });
        });

