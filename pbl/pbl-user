    <script>
        // Notification system
        function showNotification(message, type = 'success', duration = 5000) {
            const container = document.getElementById('notificationContainer');
            const notification = document.createElement('div');
            notification.className = `notification ${type}`;
            notification.innerHTML = `
                <span>${message}</span>
                <button class="notification-close">&times;</button>
            `;
            
            container.appendChild(notification);
            
            // Auto remove after duration
            const timer = setTimeout(() => {
                if (notification.parentNode) {
                    notification.style.animation = 'slideInRight 0.3s ease-out reverse';
                    setTimeout(() => {
                        if (notification.parentNode) {
                            container.removeChild(notification);
                        }
                    }, 300);
                }
            }, duration);
            
            // Manual close
            const closeBtn = notification.querySelector('.notification-close');
            closeBtn.addEventListener('click', () => {
                clearTimeout(timer);
                notification.style.animation = 'slideInRight 0.3s ease-out reverse';
                setTimeout(() => {
                    if (notification.parentNode) {
                        container.removeChild(notification);
                    }
                }, 300);
            });
        }

        // Document upload functionality
        function setupFileUpload(inputId, fileNameId, previewId) {
            const fileInput = document.getElementById(inputId);
            const fileNameSpan = document.getElementById(fileNameId);
            const previewDiv = document.getElementById(previewId);
            
            fileInput.addEventListener('change', function() {
                if (this.files && this.files[0]) {
                    const file = this.files[0];
                    fileNameSpan.textContent = file.name;
                    
                    // Show preview for image files
                    if (file.type.startsWith('image/')) {
                        const reader = new FileReader();
                        reader.onload = function(e) {
                            previewDiv.innerHTML = `<img src="${e.target.result}" alt="Preview">`;
                            previewDiv.style.display = 'block';
                        };
                        reader.readAsDataURL(file);
                    } else {
                        previewDiv.innerHTML = `<p>PDF document uploaded</p>`;
                        previewDiv.style.display = 'block';
                    }
                } else {
                    fileNameSpan.textContent = `Upload ${inputId.replace(/([A-Z])/g, ' $1')}`;
                    previewDiv.style.display = 'none';
                }
            });
        }

        // Initialize file uploads
        document.addEventListener('DOMContentLoaded', function() {
            setupFileUpload('fssaiCertificate', 'fssaiFileName', 'fssaiPreview');
            setupFileUpload('aadharCard', 'aadharFileName', 'aadharPreview');
            setupFileUpload('shopLicense', 'licenseFileName', 'licensePreview');
            setupFileUpload('itemImage', 'itemImageName', '');
        });

        // Page navigation
        document.querySelectorAll('.nav-link, .auth-btn, .auth-switch a, .btn[data-page]').forEach(link => {
            link.addEventListener('click', function(e) {
                e.preventDefault();
                
                // Update active nav link
                if (this.classList.contains('nav-link')) {
                    document.querySelectorAll('.nav-link').forEach(navLink => {
                        navLink.classList.remove('active');
                    });
                    this.classList.add('active');
                }
                
                // Show the corresponding page
                const pageId = this.getAttribute('data-page');
                document.querySelectorAll('.page').forEach(page => {
                    page.classList.remove('active');
                });
                document.getElementById(pageId).classList.add('active');

                // Scroll to top
                window.scrollTo(0, 0);
            });
        });

        // Form submissions
        document.getElementById('loginForm').addEventListener('submit', function(e) {
            e.preventDefault();
            // In a real application, you would handle the login process here
            // For demo purposes, we'll just show the profile page
            document.querySelectorAll('.page').forEach(page => {
                page.classList.remove('active');
            });
            document.getElementById('profile').classList.add('active');
            
            // Update auth buttons
            document.querySelector('.auth-buttons').innerHTML = `
                <a href="#" class="auth-btn login-btn" data-page="profile">My Profile</a>
                <a href="#" class="auth-btn register-btn" id="logout-btn">Logout</a>
            `;
            
            // Add logout functionality
            document.getElementById('logout-btn').addEventListener('click', function(e) {
                e.preventDefault();
                document.querySelectorAll('.page').forEach(page => {
                    page.classList.remove('active');
                });
                document.getElementById('home').classList.add('active');
                
                // Reset auth buttons
                document.querySelector('.auth-buttons').innerHTML = `
                    <a href="#" class="auth-btn login-btn" data-page="login">Login</a>
                    <a href="#" class="auth-btn register-btn" data-page="register">Register</a>
                `;
                
                // Reattach event listeners
                document.querySelectorAll('.auth-btn').forEach(btn => {
                    btn.addEventListener('click', function(e) {
                        e.preventDefault();
                        const pageId = this.getAttribute('data-page');
                        document.querySelectorAll('.page').forEach(page => {
                            page.classList.remove('active');
                        });
                        document.getElementById(pageId).classList.add('active');
                    });
                });
            });
        });

        // Registration form
        document.getElementById('registerForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            // Validate file uploads
            const fssaiFile = document.getElementById('fssaiCertificate').files[0];
            const aadharFile = document.getElementById('aadharCard').files[0];
            const licenseFile = document.getElementById('shopLicense').files[0];
            
            if (!fssaiFile || !aadharFile || !licenseFile) {
                showNotification('Please upload all required documents', 'error');
                return;
            }
            
            // Check file types
            const validTypes = ['image/jpeg', 'image/jpg', 'image/png', 'application/pdf'];
            
            if (!validTypes.includes(fssaiFile.type) || 
                !validTypes.includes(aadharFile.type) || 
                !validTypes.includes(licenseFile.type)) {
                showNotification('Please upload valid file types (PDF, JPG, PNG)', 'error');
                return;
            }
            
            // Check file sizes (max 5MB)
            const maxSize = 5 * 1024 * 1024; // 5MB in bytes
            
            if (fssaiFile.size > maxSize || aadharFile.size > maxSize || licenseFile.size > maxSize) {
                showNotification('File size should be less than 5MB', 'error');
                return;
            }
            
            showNotification('Registration submitted successfully! We will review your documents.', 'success');
            
            // In a real application, you would handle the registration process here
            // For demo purposes, we'll just show a success message
        });

        // Management login
        document.getElementById('managementLoginForm').addEventListener('submit', function(e) {
            e.preventDefault();
            const username = document.getElementById('managementUsername').value;
            const password = document.getElementById('managementPassword').value;
            
            // Simple demo authentication
            if (username === 'admin' && password === 'admin123') {
                document.getElementById('management-login').style.display = 'none';
                document.getElementById('management-dashboard').style.display = 'block';
                showNotification('Successfully logged in to management dashboard', 'success');
            } else {
                showNotification('Invalid credentials. Try admin/admin123 for demo.', 'error');
            }
        });

        // Management tabs
        document.querySelectorAll('.management-tab').forEach(tab => {
            tab.addEventListener('click', function() {
                document.querySelectorAll('.management-tab').forEach(t => {
                    t.classList.remove('active');
                });
                this.classList.add('active');
                
                const tabId = this.getAttribute('data-tab');
                document.querySelectorAll('.tab-content').forEach(content => {
                    content.classList.remove('active');
                });
                document.getElementById(`${tabId}-tab`).classList.add('active');
            });
        });

        // Menu management functionality
